{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"],
			"@common/*": ["./common.blocks/*"],
			"@services/*": ["./services/*"],
			"@unique/*": ["./unique.blocks/*"]
		},
		"typeRoots": [
			"typings",
			"../node_modules/@types"
		]
	},
	"include": [
		"**/*.ts",
		"**/*.html"
	],
	"exclude": [
		"**/node_modules/*",
		"**/*.spec.ts"
	]
}
{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"module": "es6",
		"target": "esnext",
		"baseUrl": ".",
		"outDir": "../dist",
		"plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
	},
	"include": [
		"**/*.ts",
		"**/*.html"
	],
	"exclude": [
		"**/node_modules/*",
		"**/*.spec.ts"
	]
}
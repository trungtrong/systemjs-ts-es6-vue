{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"module": "es6",
		"target": "esnext",
		"baseUrl": ".",
		"outDir": "../dist",
		"plugins": [{ "transform": "typescript-transform-paths" }],
		"paths": {
			"~/*": ["./*"],
			"@common/*": ["./common.blocks/*"],
			"vue-class-component": ["../dist/vue-class-component.esm.js"],
			"vue": ["https://cdn.jsdelivr.net/npm/vue@2.6.10/dist/vue.esm.browser.js"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.html"
	],
	"exclude": [
		"**/node_modules/*",
		"**/*.spec.ts"
	]
}
{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"module": "commonjs",
		"baseUrl": ".",
		"outDir": "../distnode",
		"plugins": [{ "transform": "typescript-transform-paths" }],
		"paths": {
			"~/*": ["./*"],
			"@common/*": ["./common.blocks/*"]
		}
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"**/IamHeader/*",
		"**/node_modules/*",
		"**/*.spec.ts"
	]
}
{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"module": "system",
		"target": "es5",
		"baseUrl": ".",
		"rootDir": ".",
		"outFile": "../dist/bundle.js",
		"paths": {
			"~/*": ["./*"],
			"@common/*": ["./common.blocks/*"]
		}
	},
	"files": [
		"../dist/**/*.html.js",
		"../node_modules/vue-class-component/dist/vue-class-component.esm.js"
	],
	"include": [
		"**/*.ts",
		"**/*.html"
	],
	"exclude": [
		"**/node_modules/*",
		"**/*.spec.ts"
	]
}